@model Event

@{
    ViewData["Title"] = "Event Details";
    var hasRSVPd = ViewBag.HasRSVPd ?? false;
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="card-img-top event-detail-image" alt="@Model.Title">
                }

                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <h1 class="display-6 fw-bold">@Model.Title</h1>
                        <div>
                            @if (hasRSVPd)
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="fas fa-check-circle me-1"></i>You're attending
                                </span>
                            }
                        </div>
                    </div>

                    <p class="lead">@Model.Description</p>

                    <div class="event-meta mb-4">
                        <div class="meta-item">
                            <i class="fas fa-calendar-day fa-lg text-primary me-3"></i>
                            <div>
                                <strong>Date & Time</strong>
                                <p class="mb-0">@Model.EventDate.ToString("dddd, MMMM dd, yyyy")</p>
                                <p class="mb-0 text-muted">@Model.EventDate.ToString("h:mm tt")</p>
                            </div>
                        </div>

                        <div class="meta-item">
                            <i class="fas fa-map-marker-alt fa-lg text-danger me-3"></i>
                            <div>
                                <strong>Location</strong>
                                <p class="mb-0">@Model.Location</p>
                            </div>
                        </div>

                        <div class="meta-item">
                            <i class="fas fa-users fa-lg text-success me-3"></i>
                            <div>
                                <strong>Attendees</strong>
                                <p class="mb-0">@Model.RSVPs?.Count people attending</p>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.MaterialsUrl))
                        {
                            <div class="meta-item">
                                <i class="fas fa-file-download fa-lg text-info me-3"></i>
                                <div>
                                    <strong>Materials</strong>
                                    <p class="mb-0">
                                        <a href="@Model.MaterialsUrl" target="_blank" class="text-decoration-none">
                                            Download event materials
                                        </a>
                                    </p>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="d-flex gap-2">
                        @if (!hasRSVPd)
                        {
                            <form asp-action="RSVP" method="post" class="me-2">
                                <input type="hidden" name="eventId" value="@Model.Id" />
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="fas fa-calendar-check me-2"></i>RSVP Now
                                </button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-outline-success btn-lg" disabled>
                                <i class="fas fa-check-circle me-2"></i>Already RSVP'd
                            </button>
                        }

                        <a asp-controller="Community" asp-action="Details" asp-route-id="@Model.CommunityId"
                           class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Back to Community
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Event Details</h5>
                </div>
                <div class="card-body">
                    <div class="detail-item">
                        <strong>Community:</strong>
                        <p class="mb-2">@Model.Community?.Name</p>
                    </div>
                    <div class="detail-item">
                        <strong>Created:</strong>
                        <p class="mb-0">@Model.EventDate.ToString("MMM dd, yyyy")</p>
                    </div>
                </div>
            </div>

            @if (Model.RSVPs?.Any() == true)
            {
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-users me-2"></i>Attendees (@Model.RSVPs.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="attendees-list">
                            @foreach (var rsvp in Model.RSVPs.Take(10))
                            {
                                <div class="attendee-item">
                                    <i class="fas fa-user-circle me-2 text-muted"></i>
                                    <span>@rsvp.UserId</span>
                                </div>
                            }
                            @if (Model.RSVPs.Count > 10)
                            {
                                <div class="text-center mt-2">
                                    <small class="text-muted">+@(Model.RSVPs.Count - 10) more attendees</small>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .event-detail-image {
            height: 400px;
            object-fit: cover;
            border-radius: 15px 15px 0 0;
        }

        .event-meta {
            background-color: #f8f9fa;
            padding: 1.5rem;
            border-radius: 10px;
        }

        .meta-item {
            display: flex;
            align-items: flex-start;
            margin-bottom: 1.5rem;
        }

            .meta-item:last-child {
                margin-bottom: 0;
            }

            .meta-item i {
                margin-top: 0.2rem;
            }

        .detail-item {
            margin-bottom: 1rem;
        }

            .detail-item:last-child {
                margin-bottom: 0;
            }

        .attendees-list {
            max-height: 300px;
            overflow-y: auto;
        }

        .attendee-item {
            display: flex;
            align-items: center;
            padding: 0.5rem 0;
            border-bottom: 1px solid #eee;
        }

            .attendee-item:last-child {
                border-bottom: none;
            }

        .card {
            border-radius: 15px;
            overflow: hidden;
        }
    </style>
}