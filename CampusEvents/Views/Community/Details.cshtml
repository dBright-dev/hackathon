@model Community

@{
    ViewData["Title"] = "Community Details";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="card-img-top community-detail-image" alt="@Model.Name">
                }

                <div class="card-body p-4">
                    <h1 class="display-5 fw-bold mb-3">@Model.Name</h1>
                    <p class="lead">@Model.Description</p>

                    <div class="community-meta">
                        <div class="meta-item">
                            <i class="fas fa-user fa-lg text-primary me-3"></i>
                            <div>
                                <strong>Created By</strong>
                                <p class="mb-0">@Model.CreatedBy</p>
                            </div>
                        </div>

                        <div class="meta-item">
                            <i class="fas fa-calendar-plus fa-lg text-success me-3"></i>
                            <div>
                                <strong>Created On</strong>
                                <p class="mb-0">@Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>

                        <div class="meta-item">
                            <i class="fas fa-calendar-alt fa-lg text-warning me-3"></i>
                            <div>
                                <strong>Total Events</strong>
                                <p class="mb-0">@Model.Events?.Count events</p>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <a asp-controller="Event" asp-action="Index" asp-route-communityId="@Model.Id"
                           class="btn btn-primary btn-lg">
                            <i class="fas fa-calendar me-2"></i>View Events
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Back to Communities
                        </a>
                    </div>
                </div>
            </div>

            @if (Model.Events?.Any() == true)
            {
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-calendar me-2"></i>Upcoming Events</h5>
                    </div>
                    <div class="card-body">
                        <div class="events-list">
                            @foreach (var eventItem in Model.Events.Where(e => e.EventDate >= DateTime.Now).OrderBy(e => e.EventDate).Take(5))
                            {
                                <div class="event-item">
                                    <div class="event-date">
                                        <span class="event-day">@eventItem.EventDate.ToString("dd")</span>
                                        <span class="event-month">@eventItem.EventDate.ToString("MMM")</span>
                                    </div>
                                    <div class="event-info">
                                        <h6 class="event-title">@eventItem.Title</h6>
                                        <p class="event-time text-muted mb-0">
                                            <i class="fas fa-clock me-1"></i>@eventItem.EventDate.ToString("h:mm tt")
                                            <i class="fas fa-map-marker-alt ms-3 me-1"></i>@eventItem.Location
                                        </p>
                                    </div>
                                    <div class="event-action">
                                        <a asp-controller="Event" asp-action="Details" asp-route-id="@eventItem.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            Details
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Community Info</h5>
                </div>
                <div class="card-body">
                    <div class="stats">
                        <div class="stat-item">
                            <i class="fas fa-calendar-check fa-2x text-primary"></i>
                            <div>
                                <span class="stat-number">@Model.Events?.Count</span>
                                <span class="stat-label">Total Events</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Event" asp-action="Create" asp-route-communityId="@Model.Id"
                           class="btn btn-success">
                            <i class="fas fa-plus-circle me-2"></i>Create Event
                        </a>
                        <a asp-controller="Event" asp-action="Index" asp-route-communityId="@Model.Id"
                           class="btn btn-outline-primary">
                            <i class="fas fa-list me-2"></i>View All Events
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .community-detail-image {
            height: 400px;
            object-fit: cover;
            border-radius: 15px 15px 0 0;
        }

        .community-meta {
            background-color: #f8f9fa;
            padding: 1.5rem;
            border-radius: 10px;
            margin: 2rem 0;
        }

        .meta-item {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
        }

            .meta-item:last-child {
                margin-bottom: 0;
            }

        .events-list {
            max-height: 400px;
            overflow-y: auto;
        }

        .event-item {
            display: flex;
            align-items: center;
            padding: 1rem;
            border-bottom: 1px solid #eee;
            transition: background-color 0.3s ease;
        }

            .event-item:hover {
                background-color: #f8f9fa;
            }

            .event-item:last-child {
                border-bottom: none;
            }

        .event-date {
            text-align: center;
            margin-right: 1rem;
            min-width: 60px;
        }

        .event-day {
            display: block;
            font-size: 1.5rem;
            font-weight: bold;
            color: #007bff;
        }

        .event-month {
            display: block;
            font-size: 0.8rem;
            text-transform: uppercase;
            color: #6c757d;
        }

        .event-info {
            flex-grow: 1;
        }

        .event-title {
            font-weight: 600;
            margin-bottom: 0.3rem;
        }

        .event-time {
            font-size: 0.9rem;
        }

        .stats {
            text-align: center;
        }

        .stat-item {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.5rem;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: bold;
            display: block;
            color: #2c3e50;
        }

        .stat-label {
            font-size: 0.9rem;
            color: #6c757d;
            display: block;
        }
    </style>
}