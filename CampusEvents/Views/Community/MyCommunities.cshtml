@model List<Community>
@{
    ViewData["Title"] = "My Communities";
}

<h2>My Communities</h2>

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 fw-bold text-primary">
                        <i class="fas fa-users me-3"></i>My Communities
                    </h1>
                    <p class="lead text-muted">Manage and explore the communities you've joined</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>Discover More
                </a>
            </div>
        </div>
    </div>
    @if (Model.Any())
    {
        <div class="communities-container">
            @foreach (var community in Model)
            {
                <div class="community-card card mb-4">
                    <!-- Similar card structure as index page -->
                    <div class="card-body">
                        <h3 class="card-title">@community.Name</h3>
                        <p class="card-text">@community.Description</p>
                        <div class="community-actions">
                            <a asp-controller="Event" asp-action="Index" asp-route-communityId="@community.Id"
                               class="btn btn-success">View Events</a>
                            <a asp-action="Details" asp-route-id="@community.Id" class="btn btn-info">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            You haven't joined any communities yet. <a asp-action="Index">Browse communities</a> to get started!
        </div>
    }
</div>
