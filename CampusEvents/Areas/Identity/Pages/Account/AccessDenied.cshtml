@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 text-center">
                <div class="card-header bg-danger text-white py-4">
                    <i class="fas fa-ban fa-4x mb-3"></i>
                    <h1 class="h2 mb-0">Access Denied</h1>
                </div>
                <div class="card-body p-5">
                    <h3 class="text-danger mb-4">You don't have permission to access this resource. Only Faculty memebers!</h3>

                    <p class="lead mb-4">
                        It looks like you're trying to access a page that requires special permissions.
                        If you believe this is an error, please contact your administrator.
                    </p>

                    <div class="d-grid gap-3">
                        <a href="javascript:history.back()" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-2"></i>Go Back
                        </a>

                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>Go to Homepage
                        </a>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Community" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-users me-2"></i>Browse Communities
                            </a>
                        }
                        else
                        {
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-secondary">
                                <i class="fas fa-sign-in-alt me-2"></i>Login
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 15px;
            overflow: hidden;
        }

        .card-header {
            border-radius: 15px 15px 0 0 !important;
        }

        .btn {
            border-radius: 8px;
        }
    </style>
}