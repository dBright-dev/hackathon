@page
@model RegisterModel

<div class="d-flex justify-content-center">
    <div class="col-md-6">
        <h2 class="text-center">Sign Up!</h2>
        <hr />
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-group row mb-3">
                <label asp-for="Input.Username" class="col-sm-4 col-form-label text-end">Username:</label>
                <div class="col-sm-8">
                    <input asp-for="Input.Username" class="form-control form-control-sm" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Password" class="form-label">Password *</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Create a strong password" id="passwordInput" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <div class="form-text">
                    <div id="passwordRequirements">
                        <small>Password must contain:</small>
                        <ul class="mb-1">
                            <li id="lengthRequirement">At least 6 characters</li>
                            <li id="uppercaseRequirement">One uppercase letter (A-Z)</li>
                            <li id="lowercaseRequirement">One lowercase letter (a-z)</li>
                            <li id="numberRequirement">One number (0-9)</li>
                            <li id="specialRequirement">One special character (!@@#$%^&*)</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="Input.ConfirmPassword" class="col-sm-4 col-form-label text-end">Confirm Password:</label>
                <div class="col-sm-8">
                    <input asp-for="Input.ConfirmPassword" class="form-control form-control-sm" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Role" class="form-label">I am a *</label>
                <select asp-for="Input.Role" class="form-select" id="roleSelect">
                    <option value="">Select your role</option>
                    <option value="Student">Student</option>
                    <option value="Faculty">Faculty Member</option>
                </select>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
                <div class="form-text">Select the role that best describes your position.</div>
            </div>

            <div class="d-grid gap-2 mb-3">
                <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
            </div>

            <div class="text-center mt-3">
                <p>
                    Already have an account?
                    <a asp-page="./Login" class="text-decoration-none">Login here</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
